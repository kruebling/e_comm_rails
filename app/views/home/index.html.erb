<h1>HOme!!!!</h1>

<% if @products.any? %>
  <% @products.each do |product| %>
    <p><%= product.name %> | <%= number_to_currency product.price %>
    <%= form_for @order_item do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.hidden_field :quantity, value: 1 %>
      <% if current_user %>
        <%= f.submit "Add to cart" %>
      <% end %>
    <% end %></p>
  <% end %>
<% end %>
