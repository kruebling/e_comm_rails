<h1>HOme!!!!</h1>

<% counter = 0 %>

<div class="row">
  <% if @products.any? %>
    <% @products.each do |product| %>
      <div class="col-md-4">
        <%= image_tag product.image.url(:medium) %>
        <p><strong><%= product.name %></strong> | <%= number_to_currency product.price %></p >
        <%= form_for @order_item do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.hidden_field :quantity, value: 1 %>
          <% if current_user %>
            <%= f.submit "Add to cart", :class => 'btn btn-info' %>
          <% end %>
        </div>
        <% counter += 1%>
        <% if counter == 3 %>
          <% counter = 0 %>
          </div>
          <hr>
          <div class="row">
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
